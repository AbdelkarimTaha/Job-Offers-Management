@model IEnumerable<JobOffersWebsite.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Search Result</h2>

<div>
    @foreach (var job in Model)
    {
        <div>
            <div class="col-md-12 thumbnail" style="padding:1px 15px">

                <img src="~/Images/@job.JobImage" style="float:right; width:90px;height:50px; padding-top:10px;" />

                <h3>@Html.ActionLink(@job.JobTitle, "Details", new { JobId = job.Id }, null)</h3>

                <p style="width:75%">@job.JobContent</p>
            </div>
        </div>
    }
</div>